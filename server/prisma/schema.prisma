generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  username String     @unique
  password String
  image    String?
  posts    Posts[]
  comments Comments[]
}

model Posts {
  id       Int        @id @default(autoincrement())
  post     String     @unique
  media    String?
  authorId Int
  author   User       @relation(fields: [authorId], references: [id])
  comments Comments[]
}

model Comments {
  id     Int     @id @default(autoincrement())
  media  String?
  text   String?
  postId Int
  post   Posts   @relation(fields: [postId], references: [id])
  userId Int
  user   User    @relation(fields: [userId], references: [id])
}
